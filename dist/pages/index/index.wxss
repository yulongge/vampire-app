.app {
  padding: 200rpx 32rpx 0rpx 32rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  min-height: 100vh;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#72afd3), to(#37ecba));
  background-image: -webkit-linear-gradient(bottom, #72afd3 0%, #37ecba 100%);
  background-image: -o-linear-gradient(bottom, #72afd3 0%, #37ecba 100%);
  background-image: linear-gradient(to top, #72afd3 0%, #37ecba 100%);
}
.app .app-top {
  width: 100%;
  height: 320rpx;
  border: 4rpx solid #fff;
  border-radius: 10rpx;
}
.app .equipment-list {
  width: 100%;
  border: 4rpx solid #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
  min-height: 100rpx;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.app .equipment-list .equipment-item {
  background-color: #fff;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.app .equipment-list .equipment-item:last-child {
  margin-bottom: unset;
}
